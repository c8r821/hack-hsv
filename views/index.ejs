<div class="container">
  <form action="">
    <div class="columns">
      <div class="column">
        <div class="box has-text-centered" style= "font-family: Roboto; font-size: 24px">Material</div>
        <div class="field">
        <div class="control">
          <div class="select is-hovered is-expanded is-medium is-primary" style="min-width: 100%">
            <select id="material" style="min-width: 100%">
              <% materials.forEach(material => { %>
              <option value="<%= material.yieldStrength %>"><%= material.name %></option>
              <% }); %>
            </select>
          </div>
        </div>
        </div>
        </div>
        <div class="column">
          <div class="box has-text-centered" style= "font-family: Roboto; font-size: 24px"> Hull Thickness</div>
          <input name="hthickness" class="slider is-fullwidth is-medium is-circle is-info" step="1" min="0" max="100" value="50" type="range" style="min-height: 33% ">
        </div>
        <div class="column">
          <div class="box has-text-centered" style= "font-family: Roboto; font-size: 24px">Radius</div>
          <input name="radius" class="slider is-fullwidth is-medium is-circle is-info" step="1" min="0" max="100" value="50" type="range" style="min-height: 33% ">
        </div>
    </div>
  </form>
</div>


<figure class="image" id="submarine" style="width: 65vw; margin: auto">
  <div class="section" style="margin-bottom: -15rem; width: 55%">
    <table class="table is-bordered is-striped is-narrow is-hoverable">
      <tbody>
      <tr>
        <td><strong>Radius</strong></td>
        <td id="radius">0.0 ft</td>
      </tr>
      <tr style="border-bottom: 1px dashed black;">
        <td><strong>Hull Thickness</strong></td>
        <td id="hthickness">0.0 ft</td>
      </tr>
      <tr>
        <td><strong>Depth</strong></td>
        <td id="depth">0.0 ft</td>
      </tr>
      <tr>
        <td><strong>Water Pressure</strong></td>
        <td id="pressure">0.0 MPa</td>
      </tr>
      <tr>
        <td><strong>Hull Pressure</strong></td>
        <td id="hpressure">0.0 N</td>
      </tr>
      </tbody>
    </table>
  </div>
  <div class="notification is-danger" id="gonnaDie" style="display: none;width: 25%; margin-left: 35%;margin-bottom:-88px">
